{
  "manifest_version": 3,
  "name": "QBO Transaction Notes",
  "version": "1.0.0",
  "description": "Add notes to QuickBooks Online transactions",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://*.intuit.com/*",
    "https://*.supabase.co/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.intuit.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": [
        "https://*.intuit.com/*"
      ]
    }
  ]
}